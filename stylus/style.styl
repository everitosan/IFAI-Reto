
@import '../fonts/IFAI/style.css'
@import 'selectordie.css'

@import 'normalize.styl'
@import 'colors.styl'
@import 'mixings.styl'
@import 'nib/vendor'


vendor-prefixes= o moz webkit ms

body 
	background radial-gradient(center, ellipse cover, #b9b9b9 0%,#c4c4c4 100%)
header
	fondo($morado1, $morado2)
	color  $morado2
	width 100%
	h1
		font-weight 100
		color $blanco
		padding .5em
		margin 0
#busqueda
	background rgba(255,255,255,.6)
	padding .8em 0
	text-align center
	button
		fondo($morado1,$morado2)
		color $blanco
		font-size 1.6em
		padding .2em 1em 
		margin 0 0 0 1em
		position relative
		top 2px
	input
		margin 0 0 0 1em
		border none
		height 40px
		width 40%
		box-shadow 0 1px 2px $fondo_gris2
.sod_select
	border none
	width 44%
	box-shadow 0 1px 2px $fondo_gris2
	.sod_list_wrapper
		border none
		width 101%

#resultados
	overflow hidden
	text-align center
	height 100%
	width 100%
	.item
		background #fff
		box-shadow: 0 4px 8px $sombra_item
		display inline-block
		vertical-align top
		overflow hidden
		height 200px
		width 450px
		margin 1em 4.3em
		figure 
			background #eaeaea
			width 200px
			height 200px
			margin 0
			display inline-block
			float left
			overflow hidden
			img 
				overflow hidden
				margin 3%
				width 94%
		.info
			display inline-block
			vertical-align top
			width 250px
			h3
				background $gris_oscuro
				width 100%
				font-weight 100
				text-align right
				margin 0
				button
					fondo($morado1, $morado2)
					color $blanco
					font-size 1.2em
					margin .15em 0
			.datos
				background url('../img/fondo_datos.jpg')
				background-size 100% 100%
				height 158px
				width 100%
				width 250px
				padding-top .5em
				p
					color $typo_subtitulo
					text-align left
					margin 0
					padding .5em
				.nombre
					color $typo_titulo
					font-size 1.2em

				

